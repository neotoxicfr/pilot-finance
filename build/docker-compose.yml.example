services:
  pilot:
    image: ghcr.io/neotoxicfr/pilot-finance:latest
    container_name: pilot
    restart: unless-stopped
    security_opt:
      - no-new-privileges=true
    cap_drop:
      - ALL
    environment:
      - TZ=Europe/Paris
      - HOST=pilot.votre-domaine.tld
      - ALLOW_REGISTER=true
      - ENABLE_MAIL=false
      - SMTP_HOST=
      - SMTP_PORT=587
      - SMTP_USER=
      - SMTP_PASS=
      - SMTP_FROM=
      - DATABASE_URL=file:/data/pilot.db
      - ENCRYPTION_KEY=                # Générer: openssl rand -hex 32
      - BLIND_INDEX_KEY=               # Générer: openssl rand -hex 32
      - AUTH_SECRET=                   # Générer: openssl rand -hex 32
      - DB_ENCRYPTION_KEY=             # Optionnel: openssl rand -hex 32 (chiffrement BDD complet)
    volumes:
      - ./data:/data
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://127.0.0.1:3000/api/health"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 15s
